<div id="reviews">
  <div id="review-list">
    <h3>Reviews</h3>
    <% @reviews.each do |r| %>
      <div class="review" data-controller="aos" data-aos="fade-up" data-aos-delay="300">
        <p class="stars"><%= "â˜…" * r.rating %> <span><%= distance_of_time_in_words r.created_at, @to_time %> ago</span></p>
        <p><%= r.comment %></p>
      </div>
    <% end %>
  </div>
  <div id="review-form">
    <h5>Add your review</h5>
    <%= form_with model: [@list, @review] do |f| %>
      <div class="field">
      <p>COMMENT <span class="text-red">( REQUIRED )</span></p>
        <%= f.text_area :comment, rows: 3 %>
      </div>

      <div class="field">
      <p>RATING <span class="text-red">( REQUIRED )</span></p>
        <%= f.number_field :rating %>
      </div>

      <%= f.submit class: "btn-default btn-main max-content" %>
    <% end %>
  </div>
</div>
